  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "args": ["-b", "${workspaceFolder}", "-f", "debug_feature"],
      "console": "integratedTerminal",
      // "postDebugTask": "remove_files"
    },
    {
      "name": "Python Debugger: workflow.py (uv)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/entry/functions/start-backup-from-icloud-photos/workflow.py",
      "args": [
          "-o",
          "${workspaceFolder}/target/origin",
          "-d",
          "${workspaceFolder}/target/destination"
      ],
      "console": "integratedTerminal"
    }
  ]
}
